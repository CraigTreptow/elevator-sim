# frozen_string_literal: true

source 'https://rubygems.org'

ruby '3.4.5'

# Core dependencies
gem 'tomlrb', '~> 2.0'  # TOML configuration parsing

# TTY toolkit for fancy CLI interface
gem 'tty-box', '~> 0.7'        # Bordered boxes
gem 'tty-cursor', '~> 0.7'     # Cursor positioning
gem 'tty-prompt', '~> 0.23'    # Interactive prompts
gem 'tty-progressbar', '~> 0.18'  # Progress bars
gem 'tty-screen', '~> 0.8'     # Terminal screen utilities
gem 'tty-spinner', '~> 0.9'    # Loading spinners
gem 'tty-table', '~> 0.12'     # Formatted tables
gem 'tty-command', '~> 0.10'   # Command execution
gem 'pastel', '~> 0.8'         # Terminal colors

# Development dependencies
group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'standard', '~> 1.35'
end